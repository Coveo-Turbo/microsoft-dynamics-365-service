{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist"
  },

  "include": [
    "node_modules/coveo-search-ui/lib/webpack/index.d.ts",
    "node_modules/coveo-search-ui/bin/ts/CoveoJsSearch.d.ts",
    "node_modules/coveo-search-ui/bin/ts/Externals.d.ts",
    "src/**/*.ts",
    "typings/*.d.ts"
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}